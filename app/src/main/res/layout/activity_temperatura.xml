<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TemperaturaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Entrada de temperatura -->
        <EditText
            android:id="@+id/etTemperatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Introduce la temperatura"
            android:inputType="numberDecimal|numberSigned"
            android:layout_marginBottom="8dp"/>

        <!-- Contenedor horizontal para "Convertir [Unidad 1] a [Unidad 2]" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Texto estático: Convertir -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Convertir"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Spinner para la unidad inicial -->
            <Spinner
                android:id="@+id/spinnerUnidadInicial"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <!-- Texto estático: a -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="a"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Spinner para la unidad de destino -->
            <Spinner
                android:id="@+id/spinnerUnidadDestino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- Botón para convertir -->
        <Button
            android:id="@+id/btnConvertir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convertir"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <!-- Texto de resultado -->
        <TextView
            android:id="@+id/tvResultadoTemperatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultado: "
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>